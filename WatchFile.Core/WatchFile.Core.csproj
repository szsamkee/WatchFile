<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net461;net6.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>WatchFile.Core</PackageId>
    <PackageVersion>2.0.0</PackageVersion>
    <Authors>Your Name</Authors>
    <Description>A cross-platform intelligent file monitoring library with advanced content change analysis. Specially optimized for industrial environments with thousands of small files. Supports CSV and Excel files with detailed diff tracking, temporary file caching, and configurable column mapping.</Description>
    <PackageTags>file;monitoring;csv;excel;filewatcher;industrial;content-analysis;diff-tracking</PackageTags>
    <RepositoryUrl>https://github.com/yourusername/WatchFile</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NPOI" Version="2.6.2" />
    <PackageReference Include="CsvHelper" Version="30.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>

</Project>
