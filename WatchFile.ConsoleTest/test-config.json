{
  "version": "1.0",
  "globalSettings": {
    "enableLogging": true,
    "logLevel": "Info",
    "bufferTimeMs": 500,
    "maxRetries": 3,
    "logFilePath": "logs/watchfile.log"
  },
  "watchItems": [
    {
      "id": "csv-monitor",
      "name": "CSV文件监控",
      "enabled": true,
      "path": "TestData",
      "type": "Directory",
      "recursive": false,
      "fileFilters": ["*.csv"],
      "excludePatterns": ["*.watchfile", "*.tmp", "*_backup_*"],
      "watchEvents": ["Created", "Modified"],
      "fileSettings": {
        "fileType": "CSV",
        "hasHeader": false,
        "delimiter": ",",
        "encoding": "GB2312",
        "columnMappings": [
          {
            "sourceColumn": "测试结果",
            "sourceColumnSeq": 17,
            "targetName": "TestResult",
            "dataType": "String",
            "required": false
          },
          {
            "sourceColumn": "产品条码",
            "sourceColumnSeq": 22,
            "targetName": "Barcode",
            "dataType": "String",
            "required": false
          }
        ]
      },
      "watchFileSettings": {
        "watchFileDirectory": ".watch",
        "watchFileExtension": ".watchfile",
        "maxConcurrentFiles": 16,
        "throwOnMissingWatchFile": false,
        "enableDifferenceLogging": true,
        "differenceLogPath": "logs/differences.log"
      }
    },
    {
      "id": "invalid-path-monitor",
      "name": "不存在路径的监控项",
      "enabled": false,
      "path": "NonExistentDirectory",
      "type": "Directory",
      "recursive": false,
      "fileFilters": ["*.csv"],
      "excludePatterns": ["*.watchfile", "*.tmp", "*_backup_*"],
      "watchEvents": ["Created", "Modified"],
      "fileSettings": {
        "fileType": "CSV",
        "hasHeader": true,
        "delimiter": ",",
        "encoding": "UTF-8",
        "columnMappings": [
          {
            "sourceColumn": "Name",
            "targetName": "EmployeeName",
            "dataType": "String",
            "required": true
          },
          {
            "sourceColumn": "Age",
            "targetName": "Age",
            "dataType": "Integer",
            "required": false
          }
        ]
      },
      "watchFileSettings": {
        "watchFileDirectory": ".watch",
        "watchFileExtension": ".watchfile",
        "maxConcurrentFiles": 8,
        "throwOnMissingWatchFile": false,
        "enableDifferenceLogging": false,
        "differenceLogPath": "logs/differences.log"
      }
    },
    {
      "id": "sales-tab-monitor",
      "name": "销售数据Tab分割监控",
      "enabled": false,
      "path": "TestData\\sales.csv",
      "type": "File",
      "watchEvents": ["Modified"],
      "fileSettings": {
        "fileType": "CSV",
        "hasHeader": true,
        "delimiter": "\t",
        "encoding": "UTF-8",
        "columnMappings": [
          {
            "sourceColumn": "产品名称",
            "targetName": "ProductName",
            "dataType": "String",
            "required": true
          },
          {
            "sourceColumn": "销售额",
            "targetName": "SalesAmount",
            "dataType": "Decimal",
            "required": true
          },
          {
            "sourceColumn": "日期",
            "targetName": "SalesDate",
            "dataType": "DateTime",
            "required": true,
            "format": "yyyy-MM-dd"
          },
          {
            "sourceColumn": "销售员",
            "targetName": "Salesperson",
            "dataType": "String",
            "required": false
          }
        ]
      }
    },
    {
      "id": "excel-xls-monitor",
      "name": "员工Excel文件监控(XLS)",
      "enabled": true,
      "path": "TestData\\employees.xls",
      "type": "File",
      "watchEvents": ["Created", "Modified"],
      "fileSettings": {
        "fileType": "Excel",
        "sheetName": "Sheet1",
        "hasHeader": true,
        "encoding": "UTF-8",
        "columnMappings": [
          {
            "sourceColumn": "Name",
            "targetName": "EmployeeName",
            "dataType": "String",
            "required": true
          },
          {
            "sourceColumn": "Department",
            "targetName": "Department",
            "dataType": "String",
            "required": true
          },
          {
            "sourceColumn": "Salary",
            "targetName": "Salary",
            "dataType": "Decimal",
            "required": true
          }
        ]
      }
    },
    {
      "id": "excel-xlsx-monitor",
      "name": "产品Excel文件监控(XLSX)",
      "enabled": true,
      "path": "TestData\\products.xlsx",
      "type": "File",
      "watchEvents": ["Created", "Modified"],
      "fileSettings": {
        "fileType": "Excel",
        "sheetName": "Sheet1",
        "hasHeader": true,
        "encoding": "UTF-8",
        "columnMappings": [
          {
            "sourceColumn": "ProductID",
            "targetName": "ProductID",
            "dataType": "String",
            "required": true
          },
          {
            "sourceColumn": "ProductName",
            "targetName": "ProductName",
            "dataType": "String",
            "required": true
          },
          {
            "sourceColumn": "Price",
            "targetName": "Price",
            "dataType": "Decimal",
            "required": true
          },
          {
            "sourceColumn": "Stock",
            "targetName": "Stock",
            "dataType": "Integer",
            "required": true
          }
        ]
      }
    }
  ]
}
